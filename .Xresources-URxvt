! Set window size
URxvt.geometry: 80x40

! Turn off scrollbar. Shift-Pgup and Shift-Pgdn work just fine
URxvt.scrollBar: false

! Set URxvt default extensions
! URxvt.perl-ext-common: tabbed
URxvt.perl-ext-common:

URxvt.letterSpace: -1
URxvt.font: xft:Source Code Pro
URxvt.boldFont: xft:Source Code Pro Black
! vim: filetype=xdefaults 
